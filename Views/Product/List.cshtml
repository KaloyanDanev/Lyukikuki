@model ProductListViewModel

@{
    if (Model.CurrentCategory == "Food")
    {
        ViewData["Title"] = "Food | Lyukikuki Groceries";
    }
    else if(Model.CurrentCategory == "Drinks")
    {
        ViewData["Title"] = "Drinks | Lyukikuki Groceries";
    }
    else
    {
        ViewData["Title"] = "Lyukikuki Groceries";
    }
}

<div class="row marginTop">
    @{
        foreach (var product in Model.Products)
        {
            @Html.Partial("ProductsSummary", product)
        }
    }
</div>